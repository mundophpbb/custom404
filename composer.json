{
    "name": "mundophpbb/custom404",
    "type": "phpbb-extension",
    "description": "Replaces the default phpBB 404 error page with a customizable page, including theme selection and error logging.",
    "homepage": "https://mundophpbb.com.br",
    "version": "1.0.1",
    "license": "GPL-2.0-only",
    "authors": [
        {
            "name": "Chico Gois",
            "email": "chicogois@gmail.com",
            "homepage": "https://mundophpbb.com.br",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "composer/installers": "~1.0"
    },
    "extra": {
        "display-name": "Custom 404 Error",
        "soft-require": {
            "phpbb/phpbb": ">=3.3.0,<4.0.0@dev"
        },
        "version-check": {
            "host": "mundophpbb.com.br",
            "directory": "/updates/",
            "filename": "custom404.json",
            "ssl": true
        }
    }
}